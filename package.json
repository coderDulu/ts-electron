{
  "name": "react-ts-electron",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "author": "dudulu",
  "license": "ISC",
  "scripts": {
    "start": "webpack-dev-server -c webpack.config.js ",
    "dev:electron": "npx nodemon -x npm run start-electron",
    "start-electron": "npm run build:main && npx electron .",
    "build": "npm run build:render && npm run build:main && npm run ele:pack",
    "build:render": "cross-env NODE_ENV=production npx webpack --config webpack.config.js",
    "build:main": "npx webpack --config ./webpack.main.config.js",
    "ele:pack": "electron-builder",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "productName": "example",
    "appId": "com.example.server",
    "files": [
      "dist/**/*",
      "build/**/*",
      "main.js",
      "package.json",
      "main/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "extends": null,
    "linux": {
      "target": [
        "deb"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "css-minimizer-webpack-plugin": "^4.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "react-refresh": "^0.14.0",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "electron": "^12.2.3",
    "copy-webpack-plugin": "^11.0.0",
    "electron-is-dev": "^2.0.0",
    "css-loader": "^6.7.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "postcss-loader": "^7.0.2",
    "style-loader": "^3.3.1",
     "webpack-node-externals": "^3.0.0",
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
